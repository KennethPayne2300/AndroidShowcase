<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#1ff0a4"
    tools:context=".ui.MadLib.MadLibFragment">

    <LinearLayout
        android:id="@+id/chooseStoryLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a14065"
            android:text="MadLib Showcase"
            android:textAlignment="center"
            android:textSize="60sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="#ffa32f"
            android:text="Visiting a royal zoo"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            style="@style/madlibBTNStyle"
            android:id="@+id/story1BTN"
            android:layout_marginBottom="50dp"
            android:text="Story 1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="#ffa32f"
            android:text="Space explorer surprise"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            style="@style/madlibBTNStyle"
            android:id="@+id/story2BTN"
            android:layout_marginBottom="50dp"
            android:text="Story 2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="#ffa32f"
            android:text="Talent show surprise"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            style="@style/madlibBTNStyle"
            android:id="@+id/story3BTN"
            android:layout_marginBottom="50dp"
            android:text="Story 3" />

        <Button
            style="@style/madlibBTNStyle"
            android:id="@+id/randomizeBTN"
            android:text="Randomize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/InputPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Person's Name"/>

            <EditText
                android:id="@+id/personsNameTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Ex: George"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Place:"/>

            <EditText
                android:id="@+id/placeTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Ex: Indiana"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="animal (plural):"/>

            <EditText
                android:id="@+id/pluralAnimalTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Ex: Cats"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Verb (past tense):"/>

            <EditText
                android:id="@+id/pastVerbTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Ex: ran"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Adjective:"/>

            <EditText
                android:id="@+id/adjectiveTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Ex: awsome"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="noun:"/>

            <EditText
                android:id="@+id/nounTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Ex: computer"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Number:"/>

            <EditText
                android:id="@+id/numberTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Ex: 5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="silly sound or word:"/>

            <EditText
                android:id="@+id/sillyWordTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15sp"
                android:hint="Ex: Boakle"/>

        </LinearLayout>

        <Button
            style="@style/madlibBTNStyle"
            android:id="@+id/GenerateBTN"
            android:layout_weight="1"
            android:text="@string/generate"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/storyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:id="@+id/Story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

        <Button
            style="@style/madlibBTNStyle"
            android:id="@+id/backBTN"
            android:text="Back to menu?"
            android:textAlignment="center"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>

</LinearLayout>